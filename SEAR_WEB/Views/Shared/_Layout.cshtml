<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <title>SEAR | @ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Figtree:ital,wght@0,300..900;1,300..900&family=Special+Gothic+Expanded+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    @*For ASP.NET internal*@
    <script type="importmap"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/SEAR_WEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Shared/site.css" asp-append-version="true" />
    @*For ASP.NET internal*@
    <link rel="icon" type="image/png" href="~/images/Shared/TruthEnforcersLogo.png" />
    <link rel="stylesheet" href="~/css/Shared/stylesheet.css" />
    <link rel="stylesheet" href="~/css/Shared/layout.css" />
</head>
<body>
    <section id="section-header">
        <header class="site-header">
            <a href="@Url.Action("Index", "Home")">
                <div class="header-left">
                    <img src="~/images/Shared/TruthEnforcersLogo.png" alt="Logo" class="logo">
                    <h1 class="site-title">@Localizer["TE Name"]</h1>
                </div>
            </a>

            <div class="header-center">
                <div class="search-bar">
                    <img src="~/images/Shared/svg/search.svg" alt="Search" class="search-icon">
                    <input type="text" class="search-input" placeholder="@Localizer["Search"]">
                </div>
            </div>

            <div class="header-right">
                <span class="subtitle">Super Earth Adaptive Roleplay</span>
            </div>
        </header>
    </section>
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Buttons -->
            <section id="section-hero">
                <div class="hero-background">
                    <!-- @if (!string.IsNullOrEmpty(ViewData["Raya Art Path"] as string))
                         {
                             <img src="~/@(ViewData["Raya Art Path"] as string)" alt="Background" class="bg-image">
                         }
                         else
                         {
                             <div style="margin: 200px;">The art path is null or invalid :( (try remove the "~/")</div>
                         }-->
                    <div class="slide current"></div>
                    <div class="slide next"></div>
                    <!-- will clean this up somehow, tested it out but didn't have time for making it be pretty in code -->
                </div>
                
                <script src="~/js/Shared/artZoom.js"></script>

                <div class="hero-content container">
                    <nav class="main-nav">
                        <!-- Classes -->
                        <a href="@Url.Action("Index", "Classes")">
                            <div class="nav-item">
                                <div class="nav-icon-group">
                                    <img src="~/images/Shared/svg/box.svg" alt="Classes Background" class="nav-bg-svg">
                                    <img src="~/images/Shared/ClassIcons/classes.png" alt="Classes Icon" class="nav-icon">
                                </div>
                                <span class="nav-label">Classes</span>
                            </div>
                        </a>

                        <!-- Psionics -->
                        <a href="@Url.Action("Index", "Psionics")">
                            <div class="nav-item">
                                <div class="nav-icon-group">
                                    <img src="~/images/Shared/svg/box.svg" alt="Psionics Background" class="nav-bg-svg">
                                    <img src="~/images/Shared/ClassIcons/psionics.png" alt="Psionics Icon" class="nav-icon">
                                </div>
                                <span class="nav-label">Psionics</span>
                            </div>
                        </a>

                        <!-- Enemies -->
                        <a href="@Url.Action("Index", "Enemies")">
                            <div class="nav-item">
                                <div class="nav-icon-group">
                                    <img src="~/images/Shared/svg/box.svg" alt="Enemies Background" class="nav-bg-svg">
                                    <img src="~/images/Shared/ClassIcons/enemies.png" alt="Enemies Icon" class="nav-icon">
                                </div>
                                <span class="nav-label">Enemies</span>
                            </div>
                        </a>

                        <!-- Items -->
                        <a href="@Url.Action("Index", "Items")">
                            <div class="nav-item">
                                <div class="nav-icon-group">
                                    <img src="~/images/Shared/svg/box.svg" alt="Items Background" class="nav-bg-svg">
                                    <img src="~/images/Shared/ClassIcons/items.png" alt="Items Icon" class="nav-icon">
                                </div>
                                <span class="nav-label">Items</span>
                            </div>
                        </a>

                        <!-- Manuals -->
                        <a href="@Url.Action("Index", "Manuals")">
                            <div class="nav-item">
                                <div class="nav-icon-group">
                                    <img src="~/images/Shared/svg/box.svg" alt="Manuals Background" class="nav-bg-svg">
                                    <img src="~/images/Shared/ClassIcons/manuals.png" alt="Manuals Icon" class="nav-icon">
                                </div>
                                <span class="nav-label">Manuals</span>
                            </div>
                        </a>
                    </nav>
                </div>
            </section>
            <!-- ################################################################################################################################# -->
            @RenderBody()
        </main>
    </div>
    <section id="section-footer">
        <footer class="site-footer">
            <div class="social-icons">
                <a href="#" class="social-link">
                    <img src="~/images/Shared/svg/discord.svg" alt="Discord" class="social-icon">
                </a>
                <a href="#" class="social-link">
                    <img src="~/images/Shared/svg/github.svg" alt="GitHub" class="social-icon">
                </a>
                <a href="#" class="social-link">
                    <img src="~/images/Shared/svg/google.svg" alt="Google" class="social-icon">
                </a>
            </div>
        </footer>
    </section>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>